<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9c97b4f45c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/style.css">

    <title>Hello, world!</title>
    <style>
        .linkUser:hover {
            color: rgba(255, 255, 255, .75) !important;
        }
    </style>
</head>

<body>
    <%-include('./partials/navBarLogin.ejs')%>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 p-0">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://firebasestorage.googleapis.com/v0/b/project-2059615900628317391.appspot.com/o/promo-new%2F1576462733422_2000x800.jpg?alt=media"
                                class="d-block w-100" alt="mangga-diskon">
                        </div>
                        <div class="carousel-item">
                            <img src="https://firebasestorage.googleapis.com/v0/b/project-2059615900628317391.appspot.com/o/promo-new%2F1576224052723_2000x800.jpg?alt=media"
                                class="d-block w-100" alt="kado-ibu">
                        </div>
                        <div class="carousel-item">
                            <img src="https://firebasestorage.googleapis.com/v0/b/project-2059615900628317391.appspot.com/o/promo-new%2F1576117105808_2000x800.jpg?alt=media"
                                class="d-block w-100" alt="tahunbaru">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row mt-5">
            <div class="col">
                <img src="https://www.gambaranimasi.org/data/media/1626/animasi-bergerak-sayuran-0034.gif" alt="">
            </div>
            <div class="col">
                <img src="https://www.gambaranimasi.org/data/media/1626/animasi-bergerak-sayuran-0022.gif" alt="">
            </div>
            <div class="col">
                <img src="https://www.gambaranimasi.org/data/media/1626/animasi-bergerak-sayuran-0009.gif" alt="">
            </div>
            <div class="col">
                <img src="https://www.gambaranimasi.org/data/media/1626/animasi-bergerak-sayuran-0035.gif" alt="">
            </div>
            <div class="col">
                <img src="https://www.gambaranimasi.org/data/media/1626/animasi-bergerak-sayuran-0038.gif" alt="">
            </div>
            <div class="col">
                <img src="https://www.gambaranimasi.org/data/media/1626/animasi-bergerak-sayuran-0004.gif" alt="">
            </div>
        </div>

        <div class="row">
            <%items.forEach(item => {%>
            <div class="col-3 mt-4">
                <div class="card">
                    <form action="/orders/add/<%=item.id%>" method="POST">
                        <img src="https://assets-a2.kompasiana.com/statics/crawl/553003bd0423bdee288b4567.jpeg?t=o&v=350"
                            class="card-img-top" alt="">
                        <div class="card-body">
                            <h5 name="ItemName" class="card-title"><%=item.itemName%></h5>
                            <p class="card-text">Sayur segar <%=item.itemName%></p>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star-half-alt text-warning"></i>
                            <i class="far fa-star text-warning"></i>
                            <div class="detailProduct">
                                <input type="hidden" name="price" value="<%=item.price%>">
                                <input type="submit" class="btn btn-success" value="<%=item.formatPrice%>">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <%})%>
        </div>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
</body>

</html>